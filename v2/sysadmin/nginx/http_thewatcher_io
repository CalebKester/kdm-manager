server {
    ### no-www redirect
    listen 80;
    server_name www.thewatcher.io;
    rewrite  ^  http://thewatcher.io$request_uri? permanent;
}

server {
    listen  80;
    server_name  thewatcher.io;

    ### Logging
    access_log  /var/log/nginx/thewatcher_io.access.log;
    error_log   /var/log/nginx/thewatcher_io.error.log;

    ### rewrites and redirects
    rewrite ^/favicon.ico  http://media.thewatcher.io/favicon.ico permanent;

    index   index.html;
    root    /home/thewatcher/kdm-manager/v2/;

    ### Locations
    location / {
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   Host      $http_host;
        proxy_pass         http://127.0.0.1:4200;
    }
}

server {
    listen  80;
    server_name dev.thewatcher.io;

    ### Logging
    access_log  /var/log/nginx/dev_thewatcher_io.access.log;
    error_log   /var/log/nginx/dev_thewatcher_io.error.log;

    ### rewrites and redirects
    rewrite ^/favicon.ico  http://media.thewatcher.io/favicon.ico permanent;

    root    /home/bnielsen/kdm-manager/v2/;

    ### Locations
    location / {
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   Host      $http_host;
        proxy_pass         http://127.0.0.1:4201;
    }
}

server {
    listen  80;
    server_name api.thewatcher.io;

    ### Logging
    access_log  /var/log/nginx/api_thewatcher_io.access.log;
    error_log   /var/log/nginx/api_thewatcher_io.error.log;

    ### rewrites and redirects
    rewrite ^/favicon.ico  http://media.thewatcher.io/favicon.ico permanent;

    ### Locations
    location / {
        rewrite ^/$ /index  last;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   Host      $http_host;
        proxy_pass         http://127.0.0.1:5000;
#        fastcgi_param PATH_INFO $fastcgi_script_name;
#        fastcgi_param SCRIPT_NAME "api.fcgi";
#        fastcgi_pass        unix:/tmp/thewatcher_api.sock;
#        include             /etc/nginx/fastcgi_params;
    }
}

server {
    ### blog redirect
    listen 80;
    server_name blog.thewatcher.io;
    return  301 http://kdm-manager.blogspot.com;
}

server {
    listen   80;
    server_name  media.thewatcher.io;

    access_log  /var/log/nginx/thewatcher.io.access.log;
    error_log   /var/log/nginx/thewatcher.io.error.log;

    location / {
        root   /home/thewatcher/kdm-manager/v2/media;
        autoindex   on;
    }
}


